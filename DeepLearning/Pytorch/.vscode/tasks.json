{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run python file",
			"type": "shell",
			"command": "${command:python.interpreterPath} ${file}",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"options": {
				"env": {
					"PYTHONPATH": "${workspaceRoot}"
				},
				"cwd": "${workspaceRoot}"
			}
		}
	]
}